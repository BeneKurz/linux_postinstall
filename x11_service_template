[Unit]
Description=Start x11vnc for bene
After= display-manager.service
Requires=display-manager.service

[Service]
Type=simple
User=bene
ExecStart=/usr/bin/x11vnc -display :0 \
  -auth /run/user/1001/xauth_Akhjvo \
  -rfbauth /etc/x11vnc/passwd \
  -forever -shared
Restart=on-failure

[Install]
WantedBy=display-manager.service


